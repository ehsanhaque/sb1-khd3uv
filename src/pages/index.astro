---
import Layout from '../layouts/Layout.astro';
import Gallery from '../components/Gallery.astro';
---

<Layout title="Afnan Choudhury - Photography Portfolio">
  <main>
    <section class="h-screen flex items-center justify-center relative">
      <div class="absolute inset-0 z-0">
        <img
          src="https://images.unsplash.com/photo-1470071459604-3b5ec3a7fe05"
          alt="Hero image"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/50"></div>
      </div>
      <div class="relative z-10 text-center">
        <h1 class="text-5xl md:text-7xl font-bold mb-4">Afnan Choudhury</h1>
        <p class="text-xl md:text-2xl text-gray-300">Nature & Landscape Photography</p>
      </div>
    </section>

    <section class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-12 text-center">Featured Work</h2>
      <Gallery />
    </section>

    <section class="py-24 bg-black/30 backdrop-blur-sm">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Let's Create Something Beautiful Together</h2>
        <p class="text-xl text-gray-300 mb-8">Whether you're looking for stunning landscapes or nature photography, I'm here to help bring your vision to life.</p>
        <a 
          href="/contact" 
          class="inline-block px-8 py-4 bg-[#FFD700] text-black font-bold rounded-lg hover:bg-[#FFD700]/90 transition-colors duration-300 hover:shadow-lg hover:shadow-[#FFD700]/20"
        >
          Get in Touch
        </a>
      </div>
    </section>
  </main>
</Layout>